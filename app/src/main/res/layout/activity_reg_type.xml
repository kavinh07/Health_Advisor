<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegTypeActivity"
    android:background="@color/pink">

    <TextView
        android:id="@+id/signUpTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="50dp"
        android:text="Sign up as"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/docCard"
            android:layout_below="@id/signUpTxt"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="fill_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            app:cardCornerRadius="8dp"
            android:onClick="openReg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/doctorIcn"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_baseline_medical_services_24">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="55dp"
                    android:text="Doctor"
                    android:textColor="@color/green"
                    android:textSize="50dp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/patCard"
        android:layout_below="@id/docCard"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="fill_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="8dp"
        android:onClick="openReg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="55dp"
                android:text="Patient"
                android:textColor="@color/purple_700"
                android:textSize="50dp"
                android:textStyle="bold">

            </TextView>
            <ImageView
                android:id="@+id/doctorIcn"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_margin="15dp"
                android:src="@drawable/ic_baseline_person_add_alt_1_24">

            </ImageView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>








</RelativeLayout>